generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Merchant {
  id               Int    @id @default(autoincrement())
  name             String
  userPublicKey    String @unique
  paymentPublicKey String

  shopifyAccess ShopifyAccess?
  // PaymentRecord   PaymentRecord? @relation(fields: [paymentRecordId], references: [id])
  // paymentRecordId Int?
}

model ShopifyAccess {
  shop        String @unique
  accessToken String
  lastNonce   String
  scope       String

  merchantId Int      @unique
  merchant   Merchant @relation(fields: [merchantId], references: [id])
}

model PaymentRecord {
  id        Int     @id @default(autoincrement())
  signature String
  completed Boolean
}
