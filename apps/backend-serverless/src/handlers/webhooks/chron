import * as Sentry from '@sentry/serverless';
import { APIGatewayProxyEventV2, APIGatewayProxyResultV2 } from 'aws-lambda';
import { fetchEnhancedTransaction } from '../../services/helius.service.js';
import { PrismaClient, TransactionType } from '@prisma/client';
import { TransactionRecordService } from '../../services/database/transaction-record-service.database.service.js';
import { requestErrorResponse } from '../../utilities/request-response.utility.js';
import { processDiscoveredPaymentTransaction } from '../../services/buisness-logic/process-discovered-payment-transaction.service.js';
import { processDiscoveredRefundTransaction } from '../../services/buisness-logic/process-discovered-refund-transaction.service.js';

Sentry.AWSLambda.init({
    dsn: 'https://dbf74b8a0a0e4927b9269aa5792d356c@o4505168718004224.ingest.sentry.io/4505168722526208',
    tracesSampleRate: 1.0,
});

// So this will need to work for both payments and refunds but right now i'm going to stick with just payments
// We should probably try to exit this code as soon as possible and get back to using code paths that are exiting and being used
// We also want to clarify this isn't for  retrying messages to shopify. This is equivilant to the helius webhook. We will be doing shopify
// things in another chron job

// the flow should be easy, find the transaction id's one might check, check them, and process the ones that need to be processed.
export const chron = Sentry.AWSLambda.wrapHandler(
    async (event: APIGatewayProxyEventV2): Promise<APIGatewayProxyResultV2> => {
        const prisma = new PrismaClient();
        const transactionRecordService = new TransactionRecordService(prisma);

        const paymentTransactionRecords = await transactionRecordService.getTransactionRecordsForPendingPayments();
        const refundTransactionRecords = await transactionRecordService.getTransactionRecordsForPendingRefunds();
        const allTransactionRecords = [...paymentTransactionRecords, ...refundTransactionRecords];

        for (const transactionRecord of allTransactionRecords) {
            let transaction;

            try {
                transaction = await fetchEnhancedTransaction(transactionRecord.signature);
            } catch (error) {
                // TODO: Figure out how to do this for an array, maybe merge this with the helius hook array logic
                // i actually don't have to return here, i can just continue and it should go to the next loop i think
                // i should def log with sentry though
                // TODO: Log this with sentry
                continue;
            }

            try {
                switch (transactionRecord.type) {
                    case TransactionType.payment:
                        await processDiscoveredPaymentTransaction(transactionRecord, transaction, prisma);
                        break;
                    case TransactionType.refund:
                        await processDiscoveredRefundTransaction(transactionRecord, transaction, prisma);
                        break;
                }
            } catch (error) {
                // Log this with sentry and continue
                // TODO: Log this with sentry
                continue;
            }
        }

        return {
            statusCode: 200,
            body: JSON.stringify({}),
        };
    },
    {
        rethrowAfterCapture: true,
    }
);
