// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum TransactionType {
  payment
  refund
}

enum PaymentRecordStatus {
  pending
  paid
  completed
  rejected
}

enum PaymentRecordRejectionReason {
  dependencySafetyReason
  customerSafetyReason
  internalServerReason
  unknownReason
}

enum RefundRecordStatus {
  pending
  paid
  completed
  rejected
}

enum KybState {
  incomplete
  pending
  failed
  finished
}

enum LoyaltyProgram {
  none
  points
  tiers
}

model Merchant {
  id             String          @id // Internal ID
  shop           String          @unique
  name           String?
  email          String?
  accessToken    String?
  scopes         String?
  lastNonce      String
  paymentRecords PaymentRecord[]
  refundRecords  RefundRecord[]
  walletAddress  String?
  tokenAddress   String?
  kybInquiry     String?
  kybState       KybState        @default(incomplete)
  active         Boolean         @default(false)

  acceptedTermsAndConditions Boolean @default(false)
  acceptedPrivacyPolicy      Boolean @default(false)
  dismissCompleted           Boolean @default(false)

  loyaltyProgram LoyaltyProgram @default(none)

  lastFetched DateTime?

  pointsMint String?
  pointsBack Float?

  products Product[]
  tiers    Tier[]
  customer Customer[]
}

model PaymentRecord {
  id                   String                        @id // Internal ID
  status               PaymentRecordStatus
  shopId               String                        @unique
  shopGid              String
  shopGroup            String
  test                 Boolean
  amount               Float
  currency             String
  usdcAmount           Float
  cancelURL            String
  transactions         TransactionRecord[]
  merchant             Merchant                      @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  merchantId           String
  transactionSignature String? // Signature of the on chain transaction that was used to settle the payment with Shopify
  redirectUrl          String?
  requestedAt          DateTime                      @default(now())
  completedAt          DateTime?
  refundRecord         RefundRecord[]
  rejectionReason      PaymentRecordRejectionReason?
  websocketSessions    WebsocketSession[]

  @@index(merchantId)
}

model RefundRecord {
  id                   String             @id // Internal ID
  status               RefundRecordStatus
  amount               Float
  currency             String
  usdcAmount           Float
  shopId               String // Given Id from Shopify
  shopGid              String // Given Gid from Shopify
  shopPaymentId        String // Given payment_id from Shopify, it will like to the 'shopId' in our database or 'id' from Shopify
  paymentRecord        PaymentRecord      @relation(fields: [shopPaymentId], references: [shopId])
  test                 Boolean
  merchant             Merchant           @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  merchantId           String
  transactionSignature String? // Signature of the on chain transaction that was used to settle the payment with Shopify

  TransactionRecord TransactionRecord[]

  requestedAt DateTime  @default(now())
  completedAt DateTime?

  @@index(merchantId)
  @@index(shopPaymentId)
}

model TransactionRecord {
  id              Int             @id @default(autoincrement())
  signature       String          @unique
  type            TransactionType
  paymentRecord   PaymentRecord?  @relation(fields: [paymentRecordId], references: [id])
  paymentRecordId String?
  refundRecord    RefundRecord?   @relation(fields: [refundRecordId], references: [id])
  refundRecordId  String?
  createdAt       DateTime        @default(now())
  paidWithPoints  Boolean         @default(false)

  @@index(paymentRecordId)
  @@index(refundRecordId)
}

model GDPR {
  id         Int     @id @default(autoincrement())
  merchantId String
  completed  Boolean
}

model WebsocketSession {
  id              Int            @id @default(autoincrement())
  connectionId    String         @unique
  paymentRecord   PaymentRecord? @relation(fields: [paymentRecordId], references: [id])
  paymentRecordId String

  @@index(paymentRecordId)
}

model Product {
  id         String   @id
  name       String
  image      String?
  active     Boolean  @default(false)
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  merchantId String
  mint       String?

  @@index(merchantId)
}

model Tier {
  id         Int      @id @default(autoincrement())
  name       String
  threshold  Float
  discount   Float
  active     Boolean  @default(true)
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  merchantId String
  mint       String?

  @@index(merchantId)
}

model Customer {
  customerWalletAddress String
  amountSpent           Float    @default(0)
  merchant              Merchant @relation(fields: [merchantId], references: [id])
  merchantId            String

  @@id([merchantId, customerWalletAddress]) // Composite key on merchantId and customerWalletAddress
  @@unique([merchantId, customerWalletAddress]) // Unique constraint on the same fields
}

model Checkout {
  id            Int      @id @default(autoincrement())
  checkoutToken String   @unique
  productIds    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
