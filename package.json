{
  "name": "solana-payments-app",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/backend-serverless",
      "apps/payment-ui",
      "apps/merchant-ui",
      "packages/token-price"
    ],
    "nohoist": [
      "**/backend-serverless/**"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@1.22.17"
}
