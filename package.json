{
    "name": "solana-payments-app",
    "version": "1.0.0",
    "private": true,
    "workspaces": {
        "packages": [
            "apps/*",
            "packages/*"
        ]
    },
    "scripts": {
        "build": "turbo run build",
        "predev": "cd apps/backend-serverless && y prisma:generate:dev && cd ../..",
        "dev": "ngrok http 4000 && docker-compose up && turbo run dev",
        "postdev": "cd apps/backend-serverless && y prisma:push:dev && cd ../..",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "setup:env": "node scripts/env-setup.js",
        "seed": "cd apps/backend-serverless && y prisma:seed:dev && cd ../..",
        "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,mdx}\""
    },
    "dependencies": {
        "@prisma/client": "^4.13.0",
        "@shopify/app": "^3.47.5",
        "@shopify/cli": "^3.47.5",
        "concurrently": "^8.2.0",
        "dotenv": "^16.0.3",
        "prisma": "^4.13.0",
        "typescript": "^5.0.3"
    },
    "devDependencies": {
        "@solana/prettier-config-solana": "0.0.2",
        "@types/node": "^18.16.1",
        "eslint-config-custom": "*",
        "prettier": "2.8.7",
        "prettier-plugin-organize-imports": "3.2.3",
        "turbo": "1.10.8"
    },
    "prettier": "@solana/prettier-config-solana",
    "packageManager": "yarn@1.22.19"
}
