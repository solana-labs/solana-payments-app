{
    "name": "solana-payments-app",
    "version": "1.0.0",
    "private": true,
    "workspaces": {
        "packages": [
            "apps/*",
            "packages/*"
        ]
    },
    "scripts": {
        "build": "turbo run build",
        "predev": "yarn --cwd apps/backend-serverless predev",
        "dev": "docker-compose up & turbo run dev",
        "postdev": "yarn --cwd apps/backend-serverless postdev",
        "kill": "docker-compose down && yarn --cwd apps/backend-serverless kill",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "setup:env": "node scripts/env-setup.js",
        "seed": "yarn --cwd apps/backend-serverless prisma:push:dev && yarn --cwd apps/backend-serverless prisma:seed:dev",
        "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,mdx}\""
    },
    "dependencies": {
        "@prisma/client": "^4.13.0",
        "@shopify/app": "^3.47.5",
        "@shopify/cli": "^3.47.5",
        "concurrently": "^8.2.0",
        "dotenv": "^16.0.3",
        "prisma": "^4.13.0",
        "typescript": "^5.0.3"
    },
    "devDependencies": {
        "@solana/prettier-config-solana": "0.0.2",
        "@types/node": "^18.16.1",
        "eslint-config-custom": "*",
        "prettier": "2.8.7",
        "prettier-plugin-organize-imports": "3.2.3",
        "turbo": "1.10.8"
    },
    "prettier": "@solana/prettier-config-solana",
    "packageManager": "yarn@1.22.19"
}
